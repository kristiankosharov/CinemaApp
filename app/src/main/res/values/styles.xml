<resources>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="customRatingBarGray" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_stars_gray</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>

    <style name="customRatingBarGrayWhite" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_stars_white</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>

</resources>
